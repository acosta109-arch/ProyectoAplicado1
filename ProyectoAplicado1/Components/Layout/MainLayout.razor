@inherits LayoutComponentBase

<div class="navbar navbar-expand-lg fixed-top custom-navbar" id="NavigationBar">
    <div class="container-fluid">
        <a class="navbar-brand" href="" style="font-family: 'Poppins', sans-serif;">GASTRO MANAGER</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span aria-hidden="true" style="font-family: 'Poppins', sans-serif;"></span> Inicio
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="https://wa.me/18096680075" Match="NavLinkMatch.All">
                        <span class="" aria-hidden="true" style="font-family: 'Poppins', sans-serif;"></span> Contactos
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</div>

<main class="flex-grow-1 p-4 mt-5 pt-5 bg-white">
    <!-- Cambié pt-3 a pt-5 para aumentar el padding superior -->
    <div class="top-row d-flex justify-content-between align-items-center mb-4 bg-white p-2 top-rower" style="margin-top: 20px;">
        <h5 style="font-family: 'Permanent Marker', sans-serif; font-weight: bold; color: #FF9F1C;" class="fw-bold">
            <strong style="width: 50px; height: 50px; margin-right: 15px;">
                <i class="fa-solid fa-apple-whole"></i> GASTRO MANAGER <i class="fa-solid fa-utensils"></i>
            </strong>
        </h5>
        <div class="d-flex justify-content-end align-items-center ms-auto">
        </div>
    </div>

    <article class="content bg-white">
        @Body
    </article>
</main>


<style>
    .custom-navbar {
        background-color: #FF9F1C; /* Color de fondo personalizado */
        transition: background-color 0.3s ease-in-out;
    }

    .nav-link {
        transition: color 0.3s ease;
    }

        .nav-link:hover {
            color: #fff;
        }

    .mt-5 {
        margin-top: 5rem;
    }
</style>

<script>
    window.addEventListener('scroll', function () {
        const navbar = document.querySelector('.custom-navbar');
        if (window.scrollY > 10) {
            navbar.classList.add('scrolled');
        } else {
            navbar.classList.remove('scrolled');
        }
    });
</script>
