@inherits LayoutComponentBase

<div class="navbar navbar-expand-lg fixed-top custom-navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="" style="font-family: 'Poppins', sans-serif;">Proyecto aplicado</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="" aria-hidden="true" style="font-family: 'Poppins', sans-serif;"></span> Inicio
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="" aria-hidden="true" style="font-family: 'Poppins', sans-serif;"></span> Sobre Nosotros
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="" aria-hidden="true" style="font-family: 'Poppins', sans-serif;"></span> Contactos
                    </NavLink>
                </li>
            </ul>
        </div>
    </div>
</div>

<div>
    @Body
</div>

<style>
    .custom-navbar {
        background-color: #FF9F1C; /* Color de fondo personalizado */
        transition: background-color 0.3s ease-in-out;
    }

    .nav-link {
        transition: color 0.3s ease;
    }

        .nav-link:hover {
            color: #fff;
        }

    .mt-5 {
        margin-top: 5rem;
    }
</style>

<script>
    window.addEventListener('scroll', function () {
        const navbar = document.querySelector('.custom-navbar');
        if (window.scrollY > 10) {
            navbar.classList.add('scrolled');
        } else {
            navbar.classList.remove('scrolled');
        }
    });
</script>
