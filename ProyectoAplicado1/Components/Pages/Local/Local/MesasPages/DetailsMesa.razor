@page "/Mesas/Details/"
@page "/Mesas/Details/{MesaId:int}"
@rendermode InteractiveServer
@inject MesaServices mesaService
@inject NavigationManager navigation

<PageTitle>Detalles de la Mesa</PageTitle>

<div class="container mt-5 pt-5">
    <div class="card shadow-lg">
        <!-- Header -->
        <div class="card-header" style="background-color: #FF9F1C; color: white;">
            <h2 style="font-family: 'Poppins', sans-serif;"><strong>Detalles de la Mesa</strong></h2>
        </div>

        <!-- Body -->
        <div class="card-body">
            <div class="mb-3">
                <strong>Mesa Id:</strong> @mesa?.MesaId
            </div>
            <div class="mb-3">
                <strong>Nombre:</strong> @mesa?.Nombre
            </div>
        </div>

        <!-- Footer -->
        <div class="card-footer text-left">
            <button class="btn" style="background-color: #2EC4B6; color: white;" @onclick="Volver">
                <i class="fa-solid fa-backward"></i> Volver
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public int MesaId { get; set; }
    private Mesas? mesa;

    protected override async Task OnInitializedAsync()
    {
        mesa = await mesaService.Buscar(MesaId);
    }

    private void Volver() => navigation.NavigateTo("/Index/Mesa");
}

